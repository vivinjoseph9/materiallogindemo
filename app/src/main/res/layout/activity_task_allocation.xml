<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="14dp"
            android:text="TASK ALLOCATION"
            android:textSize="20dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btn_add_newtask"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="Add New Task" />


        <TableLayout
            android:id="@+id/table_taskalloc"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_taskalloc_row"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tbl_task"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Task"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tbl_owner"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Owner"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tbl_status"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Status"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tbl_timeline"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Timeline"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tbl_priority"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Priority"
                    android:textColor="#000" />

            </TableRow>

            <View
                android:layout_height="3dip"
                android:layout_width="match_parent"
                android:background="#ff0000" />

        </TableLayout>

        // add a listview to display our table records
        <ListView
            android:id="@+id/records_view"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_marginTop="16dp">
        </ListView>

    <!--    <fragment android:name="com.sourcey.materiallogindemo.Fragments.DialogFragment"
            android:id="@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            /> -->

    </LinearLayout>

</ScrollView>